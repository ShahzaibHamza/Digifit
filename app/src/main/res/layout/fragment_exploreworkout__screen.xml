<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".mainscreens.ExploreWorkout_Screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore Workouts:"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/teritorycolor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center">
            <ImageButton
                android:id="@+id/workoutcategory"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/workoutcategory"
                android:contentDescription="workouts"
                android:backgroundTint="@color/primarycolor"
                android:scaleType="fitCenter"
                />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Workout"
                 android:textStyle="bold"
                 android:textSize="12sp"
                 android:layout_marginTop="-10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/yogacategory"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/yogacategory"
                    android:contentDescription="workouts"
                    android:backgroundTint="@color/primarycolor"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoga"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="-10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/fatburncategory"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/fatburncategory"
                    android:contentDescription="workouts"
                    android:backgroundTint="@color/primarycolor"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat Burn"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="-10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/painreliefcategory"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/injuriescategory"
                    android:contentDescription="workouts"
                    android:backgroundTint="@color/primarycolor"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pain Relief"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="-10dp"/>

            </LinearLayout>
        </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        android:layout_marginTop="12dp"
        app:navGraph="@navigation/nav_graph" />
</LinearLayout>
